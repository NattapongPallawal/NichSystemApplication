        <activity android:name=".view.aboutapplication.AboutApplicationActivity">
        </activity>
        <activity
                android:name=".view.favorite.FavoriteActivity"
                android:theme="@style/AppThemeNoActionBar">
        </activity>
        <activity android:name=".view.food.FoodActivity">
        </activity>
        <activity
                android:theme="@style/AppTheme.NoActionBar"
                android:name=".view.fooddetail.FoodDetailActivity">
        </activity>
        <activity android:name=".view.myorder.MyOrderActivity">
        </activity>
        <activity
