        <activity android:name=".view.payment.PaymentActivity">
        </activity>
        <activity
                android:theme="@style/AppTheme.NoActionBar"
                android:name=".view.randomfood.RandomFoodActivity">
        </activity>
        <activity android:name=".view.osl.OSLActivity">
        </activity>
        <activity
                android:theme="@style/AppTheme.NoActionBar"
                android:name=".view.login.LoginActivity">
        </activity>
        <activity
                android:theme="@style/AppTheme.NoActionBar"
                android:name=".view.register.Register1Activity">
        </activity>
        <activity
                android:theme="@style/AppTheme.NoActionBar"
                android:name=".view.register.Register2Activity">
        </activity>
        <activity
                android:theme="@style/AppTheme.NoActionBar"
                android:name=".view.forgotpassword.ForgotPasswordActivity">
        </activity>
        <activity android:name=".view.orderdetail.OrderDetailActivity">
        </activity>
        <activity
                android:name=".view.restaurantdetail.RestaurantDetailActivity"

                android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>

